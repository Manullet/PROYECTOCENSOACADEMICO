    <div class="container mt-5">
        <h2 class="mb-4"> Universidades </h2>
        <form action="/universidadcreate" method="POST">
            
            <div class="form-group">
                <label for="siglas">Ingrese las Siglas de su Universidad</label>
                <input type="text" class="form-control" id="siglas" name="siglas"  pattern="[A-Za-z\s]+" title="Solo se permiten letras">
            </div>
            <div class="form-group">
                <label for="nombre_universidad">Ingrese el Nombre de su Universidad</label>
                <input type="text" class="form-control" id="nombre_universidad" name="nombre_universidad" pattern="[A-Za-z\s]+" title="Solo se permiten letras">
            </div>
            <a href="/mostraruniversidad" type="button" class="btn btn-secondary">Cancelar</a>
            <button type="submit" class="btn btn-primary">Guardar</button>
        </form>
    </div>
            
          

